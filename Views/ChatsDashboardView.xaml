<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Friendships.Views.ChatsDashboardView"
             Title="Dashboard"
             NavigationPage.HasNavigationBar="False"
             xmlns:viewmodel="clr-namespace:Friendships.ViewModels">

    <StackLayout Padding="10">
        <Button Text="Find Friend"
                HorizontalOptions="CenterAndExpand"
                Margin="0,10,0,10"
                Command="{Binding GoToFindFriendsScreenCommand}" />

        <ListView ItemsSource="{Binding FriendsList}"
                  HasUnevenRows="True"
                  ItemSelected="ListView_ItemSelected">
            <ListView.ItemTemplate>
                
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="30"
                              BackgroundColor="LightGray">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            
                            <Image Grid.Column="0"
                                   Source="{Binding ProfileImagePath}"
                                   Aspect="AspectFill"
                                   HeightRequest="60"
                                   WidthRequest="60"
                                   Margin="0,0,20,0"
                                   VerticalOptions="CenterAndExpand"
                                   HorizontalOptions="Center" />

                            <Label Grid.Column="1"
                                   Text="{Binding Name}"
                                   FontAttributes="Bold"
                                   FontSize="20" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>